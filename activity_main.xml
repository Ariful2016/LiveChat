<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:background="@color/colorPrimaryDark"
            android:id="@+id/statusPost"
            android:src="@drawable/ic_post_add_24"
            android:layout_width="50dp"
            android:layout_height="50dp"/>




        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_toEndOf="@id/statusPost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            app:tabIndicator="@color/coloorTAb"
            app:tabIndicatorColor="@color/coloorTAb"
            app:tabSelectedTextColor="@color/coloorTAb"
            app:tabTextColor="@color/colorAccent">


        </com.google.android.material.tabs.TabLayout>

    </RelativeLayout>





    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>